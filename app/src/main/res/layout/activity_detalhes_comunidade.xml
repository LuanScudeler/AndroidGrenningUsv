<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.greeningu.DetalhesComunidadeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtNomeComunidade"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Nome comunidade"
        android:textColor="#ff179625"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lider:"
        android:id="@+id/txtLiderComunidade"
        android:layout_below="@+id/txtNomeComunidade"
        android:layout_centerHorizontal="true"
        android:textColor="#ff179625"
        android:layout_marginTop="50dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quantidade de membros:"
        android:id="@+id/txtQtdMembros"
        android:layout_below="@+id/txtLiderComunidade"
        android:layout_centerHorizontal="true"
        android:textColor="#ff179625"
        android:textSize="25dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pontuação total:"
        android:id="@+id/txtPontuacaoTotal"
        android:layout_below="@+id/txtQtdMembros"
        android:layout_centerHorizontal="true"
        android:textColor="#ff179625"
        android:textSize="25dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participar"
        android:id="@+id/btnParticipar"
        android:layout_below="@+id/txtPontuacaoTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#ff179625"
        android:onClick="btnParticiparClick"/>
</RelativeLayout>
